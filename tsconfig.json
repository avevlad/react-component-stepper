{
  "compilerOptions": {
    "target": "ES2018",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017"
    ],
    "allowJs": true,
    "noEmitOnError": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}
